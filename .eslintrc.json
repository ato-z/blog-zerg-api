{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": ["xo-typescript"],
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/indent": ["error", 2]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "off",
    "object-curly-spacing": "off",
    "indent": ["error", 2]
  }
}
